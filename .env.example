# Environment Configuration for DirtMovers
# Copy this file to .env and update with your values

# Application Environment
NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://dirtmovers:your_secure_password@localhost:5432/dirtmovers

# Session Configuration
SESSION_SECRET=your_super_secure_session_secret_here_minimum_32_chars

# PostgreSQL Connection Details (for backup scripts)
PGHOST=localhost
PGPORT=5432
PGUSER=dirtmovers
PGPASSWORD=your_secure_password
PGDATABASE=dirtmovers

# Domain Configuration (optional)
DOMAIN=your-domain.com

# Security Settings
CORS_ORIGIN=https://your-domain.com